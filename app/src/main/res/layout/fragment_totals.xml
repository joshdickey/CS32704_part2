<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joshd.cs32704_part2.MainActivity"
    android:orientation="vertical">


    <TextView
        android:text="@string/total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txvTotalAmount"
        app:layout_constraintVertical_chainStyle="spread"
        android:textStyle="normal|bold"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAlignment="textEnd"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24sp" />

    <TextView
        android:text="@string/totalAmountValue"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/txvTotalAmountValue"
        android:textStyle="normal|bold"
        android:textAlignment="textEnd"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txvTotalAmount"
        android:textSize="24sp" />

</android.support.constraint.ConstraintLayout>
